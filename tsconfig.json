// tsconfig.json
{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "~~/*": [
        "./*"
      ],
      "#app": [
        "./node_modules/nuxt/dist/app/index"
      ],
      "#imports": [
        "./.nuxt/imports.d.ts"
      ]
    },
    "types": [
      "node",
      "echarts",
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.vue",
    ".nuxt/nuxt.d.ts",
    ".nuxt/types/**/*.d.ts",
    "types/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.vue",
    "components/**/*.vue",
    "server/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".nuxt",
    "output"
  ]
}