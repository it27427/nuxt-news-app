{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "@/*": [
        "./app/*"
      ],
      "~/server/*": [
        "./server/*"
      ],
      "#app": [
        "./node_modules/nuxt/dist/app/index"
      ],
      "#imports": [
        "./.nuxt/imports.d.ts"
      ]
    },
    "types": [
      "node",
      "echarts"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "server/**/*.ts",
    "app/**/*.ts",
    "app/**/*.vue",
    "components/**/*.vue",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".nuxt"
  ]
}